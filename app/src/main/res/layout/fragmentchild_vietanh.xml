<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/nav_header_vertical_spacing">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="8dp">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="2dp"
            android:layout_weight="10">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_vietword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10pt"
                android:paddingLeft="4dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/colorBlack"
                android:text="Chia nhau ra tráº£"/>
            <ImageView
                android:id="@+id/imgv_volume"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:elevation="10dp"
                android:background="@drawable/ic_volume_24dp"
                android:layout_gravity="center" />
        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_engword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="10pt"
            android:paddingLeft="14dp"
            android:textColor="@color/colorTab"
            android:text="Let's go dutch"/>
        <View
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorLightSliver2" />
    </LinearLayout>
</android.support.v7.widget.CardView>
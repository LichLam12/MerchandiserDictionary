<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.onlyo.merchandiserdictionary.activity.NavigationDrawerActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:gravity="start"
            android:layout_marginRight="6dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <SearchView
                    android:id="@+id/edt_search"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="-12dp"
                    android:layout_marginStart="-12dp"
                    android:queryHint="Nhập vào từ cần tra"
                    android:iconifiedByDefault="false"
                    android:defaultFocusHighlightEnabled="false"
                    android:focusedByDefault="false"
                    android:searchIcon="@null"
                    android:textColor="@color/colorWhite"
                    android:inputType="textNoSuggestions"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textColorHighlight="@color/colorWhite"
                    />
                <SearchView
                    android:id="@+id/edt_vietanhsearch"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="-12dp"
                    android:layout_marginStart="-12dp"
                    android:queryHint="Nhập vào từ cần tra"
                    android:iconifiedByDefault="false"
                    android:defaultFocusHighlightEnabled="false"
                    android:focusedByDefault="false"
                    android:searchIcon="@null"
                    android:textColor="@color/colorWhite"
                    android:inputType="textNoSuggestions"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textColorHighlight="@color/colorWhite"
                    android:visibility="gone"
                    />
                <SearchView
                    android:id="@+id/edt_yourwordsearch"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="-12dp"
                    android:layout_marginStart="-12dp"
                    android:queryHint="Nhập vào từ cần tra"
                    android:iconifiedByDefault="false"
                    android:defaultFocusHighlightEnabled="false"
                    android:focusedByDefault="false"
                    android:searchIcon="@null"
                    android:textColor="@color/colorWhite"
                    android:inputType="textNoSuggestions"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:textColorHighlight="@color/colorWhite"
                    android:visibility="gone"
                    />
                    <!--
                                        android:background="@null"
                    app:floatingSearch_searchBarMarginRight="5dp"
                    app:floatingSearch_searchHint="Nhập từ điển cần tra"
                    app:floatingSearch_leftActionMode="noLeftAction"
                    app:floatingSearch_suggestionsListAnimDuration="250"
                    app:floatingSearch_showSearchKey="false"
                    app:floatingSearch_showVoiceInput="true"
                    app:floatingSearch_dimBackground="true"
                    app:floatingSearch_close_search_on_keyboard_dismiss="true"
                    app:floatingSearch_searchBarMarginTop="2dp"-->

                <ImageButton
                    android:id="@+id/imgbtn_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="@color/colorWhite"
                    android:background="@drawable/ic_mic_24dp"/>
                <ImageButton
                    android:id="@+id/imgbtn_deleteall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="2dp"
                    android:backgroundTint="@color/colorWhite"
                    android:background="@drawable/ic_delete_24dp"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/imgbtn_deleteall2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="2dp"
                    android:backgroundTint="@color/colorWhite"
                    android:background="@drawable/ic_delete_24dp"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/imgbtn_addyourword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="2dp"
                    android:backgroundTint="@color/colorWhite"
                    android:background="@drawable/ic_add_24dp"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/ratebar_addtofav"
                    android:layout_toRightOf="@+id/imgbtn_volume_layout"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="right"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:numStars="1"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:transformPivotX="55dp"
                    android:transformPivotY="10dp"
                    android:layout_marginTop="1dp"
                    android:isIndicator="true"
                    android:max="5"
                    android:clickable="true"
                    android:focusable="true"
                    android:progressTint="@color/colorYellow"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <!--<android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/colorIndicatorTab"
            app:tabBackground="@color/colorTab"
            app:tabTextColor="@color/colorIndicatorTab"
            app:tabMinWidth="60pt"
            app:tabGravity="fill"/>-->

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="?attr/actionBarSize"/>

    <FrameLayout
        android:id="@+id/flContent"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"/>
   <!-- <include layout="@layout/content_navigation_drawer" />-->

</android.support.design.widget.CoordinatorLayout>
